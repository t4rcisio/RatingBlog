// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  UserId    String   @unique
  Password  String
  UserType  UserType @default(USER)
  Score     Int      @default(0)
}

model Companie {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  AuthorId  String
  Name      String   @unique
  Origem    String
  Category  String
  Rating    Float    @default(0)
}

model Rating_Company {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  AuthorId  String
  CompanyId String
  Salary    Float
  TypeWork  TypeWork
  Benefits  String[] @default([])
  Contract  Contract
  Position  String
  WeekHours Float
  Rating    Float
  Comment   String   @default("")
  like      String[] @default([])
  Unlike    String[] @default([])
}

model Professor {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Name      String
  Rating    Float    @default(0)
}

model Rating_Professor {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  AuthorId    String
  ProfessorID String
  Course      String
  Year        String
  Comment     String   @default("")
  Rating      Float
  like        String[] @default([])
  Unlike      String[] @default([])
}

enum Contract {
  Estagio
  Emprego
}

enum TypeWork {
  Presencial
  Remoto
  Hibrido
}

enum UserType {
  USER
  ADM
  MODERATOR
}
